<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My e-shop application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:skyblue">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*<img src="~/Images/7.jpg" height="50" width="50">*@

                <img src="~/Images/pullups.png"   height="50" width="50"/>
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li style="font-size:large"><b>@Html.ActionLink("Customer-Management ||", "Customer", "Admin", new { area = "" }, new { @class = "navbar-brand" })</b></li>
                    <li style="font-size:large"><b>@Html.ActionLink("Product-Management ||", "Product", "Admin", new { area = "" }, new { @class = "navbar-brand" })</b></li>
                    @*<li style="font-size:large">@Html.ActionLink("Order-Management ||", "Placeorder", "Admin")</li>*@

                <li style="font-size:large"><b>@Html.ActionLink("Log out", "login", "user", new { area = "" }, new { @class = "navbar-brand" })</b></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="background-color:skyblue">
            <p style="color:black">&copy; @DateTime.Now.Year - My e-shop Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
