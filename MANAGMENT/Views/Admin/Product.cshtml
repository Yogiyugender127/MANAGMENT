
@model IEnumerable<MANAGMENT.Models.Product>
@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<br />
<br />
<br />
<div class="jumbotron" style="background-color:skyblue">
    @*<div class="jumbotron" style="background-color:darkgray">*@
    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-cart4" viewBox="0 0 16 16">
        <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5zM3.14 5l.5 2H5V5H3.14zM6 5v2h2V5H6zm3 0v2h2V5H9zm3 0v2h1.36l.5-2H12zm1.11 3H12v2h.61l.5-2zM11 8H9v2h2V8zM8 8H6v2h2V8zM5 8H3.89l.5 2H5V8zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0zm9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0z" />
    </svg>
    <div class="table table-responsive">
        <p>
            <a href="Create" class=" btn btn-primary">Add Product</a>
        </p>
        <table id="ProductTable" class="table table-responsive-sm table-bordered table-hover">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Product Name</th>
                    <th>Description</th>
                    <th>price</th>
                    <th>Action</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="../@item.Image" height="50" /></td>
                    <td>@item.DisplayName</td>


                    <td>@item.Description</td>
                    <td>@item.price</td>
                    <td>
                        <i class="glyphicon glyphicon-eye-open" title="Click to View"></i> |<a href="/Admin/Editproduct/@item.ProductID">
                            <i class="glyphicon glyphicon-edit" title="Click to Edit"> </i>|@*@Html.ActionLink("DELETE", "Delete", "Customer", new { @id = item.CustomerID })*@

                            <a href="/Admin/Delete/@item.ProductID"> <i class="glyphicon glyphicon-trash" title="Click to Delete"></i></a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"
            integrity="sha256-Qw82+bXyGq6MydymqBxNPYTaUXXq7c8v3CwiYwLLNXU="
            crossorigin="anonymous"></script>

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>



    <script>
        $('#ProductTable').DataTable({
            "lengthMenu": [[5, 10, 15, -1], [5, 10, 15, "All"]],
            "columns": [
                { "data": "Image", orderable: false },
                { "data": "Product Name" },
                { "data": "Description" },
                { "data": "price" },


                { "data": "Action", orderable: false }]
        });


    </script>
