@using MANAGMENT.Models;
@{

    Layout = "~/Views/Shared/View.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Product Vidw page</title>

</head>
@*background="~/Images/1000_F_231328283_kD6rAlCqlEP9NSUcV3fUg6KVSAiF36Be.jpg"*@
<body style="align-content:center">
    <div class="container">
        <div class="row">

            <table class="table table-bordered table-responsive table-hover">
               
                <tr style="background-color:whitesmoke">
                    <th>Item Pic</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
                <tr style="background-color:yellow">
                    <td>
                        <img src="~/@Model.Image" height="100" width="100" />
                    </td>
                    <td>@Model.DisplayName</td>
                    <td>@Model.Description</td>
                    <td>The mobile negotiable price is @Model.price</td>
                    <td>
                        <a href="@Url.Action("Orderpage","Home",new { @id=Model.ProductID})" class="btn btn-success">Order</a>
                        <a href="@Url.Action("ProductDetails","Home")" class="btn btn-primary">Back</a>
                    </td>
                </tr>
            </table>

        </div>


        <div>
            @Html.ActionLink("Back to List", "ViewDetails", "Home")
        </div>
    </div>
</body>

</html>








